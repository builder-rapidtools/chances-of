{
  "name": "chances-of",
  "version": "1.0.0",
  "description": "CLI tool for calculating probabilities through Monte Carlo simulation and exact calculations",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "chances-of": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "start": "node dist/cli.js",
    "dev:api": "tsx watch server/index.ts",
    "dev:ui": "vite",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\""
  },
  "keywords": ["probability", "monte-carlo", "simulation", "cli"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^4.7.0",
    "vite": "^5.0.11"
  }
}
